services:
  clawdbot:
    image: {{ clawdbot_docker_image }}:{{ clawdbot_docker_tag }}
    container_name: {{ clawdbot_container_name }}
    restart: unless-stopped
    ports:
      - "127.0.0.1:{{ clawdbot_port }}:{{ clawdbot_port }}"
    volumes:
      - {{ clawdbot_config_dir }}:/home/clawdbot/.clawdbot
    environment:
      - NODE_ENV=production
    networks:
      - clawdbot-network
    healthcheck:
      test: ["CMD-SHELL", "pnpm list -g @clawdbot/clawdbot || exit 1"]
      interval: 30s
      timeout: 3s
      start_period: 5s
      retries: 3

networks:
  clawdbot-network:
    driver: bridge
