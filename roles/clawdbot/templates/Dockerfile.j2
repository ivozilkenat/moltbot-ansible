FROM node:22-slim

# Install system dependencies and create user in one layer
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    gnupg \
    git \
    && rm -rf /var/lib/apt/lists/* \
    && useradd -m -s /bin/bash clawdbot

# Switch to clawdbot user early
USER clawdbot
WORKDIR /home/clawdbot

# Install pnpm and Clawdbot
RUN npm install -g pnpm && \
    pnpm install -g @clawdbot/clawdbot

# Create config directories
RUN mkdir -p .clawdbot/sessions .clawdbot/credentials

# Expose default port (only accessible via localhost binding)
EXPOSE {{ clawdbot_port }}

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD pnpm list -g @clawdbot/clawdbot || exit 1

# Keep container running and responsive
CMD ["sh", "-c", "while true; do sleep 3600; done"]
